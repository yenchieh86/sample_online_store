<div class='container-fluid system_messages'>
  <div class='row'>
    <% flash.each do |message_type, message| %>
        <% if message_type == 'alert' || message_type == 'danger' %>
          <%= content_tag(:div, message, class: 'bg-danger') %>
        <% elsif message_type == 'success' || message_type == 'notice' %>
          <%= content_tag(:div, message, class: 'bg-success') %>
        <% else %>
          <%= content_tag(:div, message, class: "bg-warning") %>
        <% end %>
    <% end %>
  </div>
</div>